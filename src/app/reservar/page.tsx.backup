"use client";

import { useState, useEffect } from "react";
import { 
  Calendar, 
  Clock, 
  User, 
  FileText, 
  CreditCard, 
  CheckCircle,
  ChevronRight,
  ChevronLeft,
  Loader2,
  AlertCircle,
  Phone,
  Mail,
  IdCard,
  Upload,
  Info
} from "lucide-react";
import { 
  validateDNI, 
  validatePhone, 
  validateEmail, 
  validateRequired,
  validateMinDaysInAdvance,
  formatDNI,
  formatPhone,
  formatEmail,
  getDaysDifference
} from "@/lib/validations";

type Step = 1 | 2 | 3 | 4 | 5;

type FormData = {
  // Step 1: Date & Time
  date: string;
  time: string;
  // Step 2: Personal Info
  nombre: string;
  apellidos: string;
  dni: string;
  telefono: string;
  email: string;
  // Step 3: Mass Details
  tipoMisa: string;
  intencion: string;
  difuntos: string;
  observaciones: string;
  // Step 4: Payment
  metodoPago: string;
  comprobante: File | null;
};

type MassType = {
  tipo_misa: string;
  nombre: string;
  descripcion: string;
  precio: number;
};

type PaymentMethod = {
  method_type: string;
  method_name: string;
  description: string;
  banco?: string;
  cuenta?: string;
  cci?: string;
  titular?: string;
  instructions: string;
};

type AvailableTime = {
  time: string;
  isAvailable: boolean;
  reservationsCount: number;
};

type ValidationErrors = {
  [key: string]: string;
};

const MIN_DAYS_FOR_CASH = 3; // Días mínimos para pago en efectivo
];

export default function ReservarPage() {
  const [currentStep, setCurrentStep] = useState<Step>(1);
  const [isSubmitting, setIsSubmitting] = useState(false);
  const [submitStatus, setSubmitStatus] = useState<"idle" | "success" | "error">("idle");
  const [formData, setFormData] = useState<FormData>({
    date: "",
    time: "",
    nombre: "",
    apellidos: "",
    dni: "",
    telefono: "",
    email: "",
    tipoMisa: "simple",
    intencion: "",
    difuntos: "",
    observaciones: "",
    metodoPago: "efectivo",
    comprobante: null,
  });

  const handleInputChange = (
    e: React.ChangeEvent<HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement>
  ) => {
    const { name, value } = e.target;
    setFormData((prev) => ({ ...prev, [name]: value }));
  };

  const handleFileChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const file = e.target.files?.[0] || null;
    setFormData((prev) => ({ ...prev, comprobante: file }));
  };

  const validateStep = (step: Step): boolean => {
    switch (step) {
      case 1:
        return !!formData.date && !!formData.time;
      case 2:
        return !!(formData.nombre && formData.apellidos && formData.dni && formData.telefono && formData.email);
      case 3:
        return !!(formData.tipoMisa && formData.intencion);
      case 4:
        return !!formData.metodoPago;
      default:
        return true;
    }
  };

  const nextStep = () => {
    if (validateStep(currentStep) && currentStep < 5) {
      setCurrentStep((prev) => (prev + 1) as Step);
    }
  };

  const prevStep = () => {
    if (currentStep > 1) {
      setCurrentStep((prev) => (prev - 1) as Step);
    }
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setIsSubmitting(true);
    setSubmitStatus("idle");

    try {
      // Simulate API call
      await new Promise((resolve) => setTimeout(resolve, 2000));
      setSubmitStatus("success");
      setCurrentStep(5);
    } catch {
      setSubmitStatus("error");
    } finally {
      setIsSubmitting(false);
    }
  };

  const getSelectedMassPrice = () => {
    const selectedMass = massTypes.find((m) => m.value === formData.tipoMisa);
    return selectedMass?.price || 0;
  };

  const steps = [
    { number: 1, label: "Fecha y Hora", icon: Calendar },
    { number: 2, label: "Datos Personales", icon: User },
    { number: 3, label: "Detalles de Misa", icon: FileText },
    { number: 4, label: "Pago", icon: CreditCard },
    { number: 5, label: "Confirmación", icon: CheckCircle },
  ];

  return (
    <>
      {/* Hero Banner */}
      <section 
        className="relative h-[250px] md:h-[300px] bg-cover bg-center"
        style={{
          backgroundImage: "url('https://images.unsplash.com/photo-1544427920-c49ccfb85579?q=80&w=2000')",
        }}
      >
        <div className="absolute inset-0 bg-black/50" />
        <div className="relative z-10 h-full flex items-center justify-center">
          <div className="text-center text-white">
            <h1 className="text-4xl md:text-5xl font-bold mb-4">Reservar Misa</h1>
            <p className="text-lg md:text-xl">Solicita una intención de misa</p>
          </div>
        </div>
      </section>

      {/* Reservation Form */}
      <section className="py-16 bg-gray-50">
        <div className="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
          {/* Progress Steps */}
          <div className="mb-12">
            <div className="flex items-center justify-between">
              {steps.map((step, index) => {
                const StepIcon = step.icon;
                const isActive = currentStep === step.number;
                const isCompleted = currentStep > step.number;
                
                return (
                  <div key={step.number} className="flex items-center">
                    <div className="flex flex-col items-center">
                      <div 
                        className={`w-12 h-12 rounded-full flex items-center justify-center transition-colors ${
                          isActive 
                            ? "bg-[#002F57] text-white" 
                            : isCompleted 
                              ? "bg-[#49AE9C] text-white"
                              : "bg-gray-200 text-gray-500"
                        }`}
                      >
                        {isCompleted ? (
                          <CheckCircle className="w-6 h-6" />
                        ) : (
                          <StepIcon className="w-6 h-6" />
                        )}
                      </div>
                      <span className={`mt-2 text-xs text-center hidden sm:block ${
                        isActive ? "text-[#002F57] font-semibold" : "text-gray-500"
                      }`}>
                        {step.label}
                      </span>
                    </div>
                    {index < steps.length - 1 && (
                      <div 
                        className={`h-1 w-12 md:w-24 mx-2 transition-colors ${
                          currentStep > step.number ? "bg-[#49AE9C]" : "bg-gray-200"
                        }`}
                      />
                    )}
                  </div>
                );
              })}
            </div>
          </div>

          {/* Form Card */}
          <div className="bg-white rounded-lg shadow-lg p-8">
            <form onSubmit={handleSubmit}>
              {/* Step 1: Date & Time */}
              {currentStep === 1 && (
                <div className="space-y-6">
                  <h2 className="text-2xl font-bold text-[#002F57] mb-6">
                    Selecciona Fecha y Hora
                  </h2>
                  
                  <div>
                    <label htmlFor="date" className="block text-sm font-medium text-gray-700 mb-2">
                      Fecha de la Misa *
                    </label>
                    <div className="relative">
                      <Calendar className="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" />
                      <input
                        type="date"
                        id="date"
                        name="date"
                        value={formData.date}
                        onChange={handleInputChange}
                        min={new Date().toISOString().split("T")[0]}
                        required
                        className="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#002F57]"
                      />
                    </div>
                  </div>

                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-2">
                      Hora de la Misa *
                    </label>
                    <div className="grid grid-cols-2 md:grid-cols-4 gap-3">
                      {availableTimes.map((time) => (
                        <button
                          key={time}
                          type="button"
                          onClick={() => setFormData((prev) => ({ ...prev, time }))}
                          className={`p-3 rounded-lg border-2 transition-colors ${
                            formData.time === time
                              ? "border-[#002F57] bg-[#002F57] text-white"
                              : "border-gray-200 hover:border-[#002F57]"
                          }`}
                        >
                          <Clock className="w-5 h-5 mx-auto mb-1" />
                          <span className="text-sm font-medium">{time}</span>
                        </button>
                      ))}
                    </div>
                  </div>
                </div>
              )}

              {/* Step 2: Personal Info */}
              {currentStep === 2 && (
                <div className="space-y-6">
                  <h2 className="text-2xl font-bold text-[#002F57] mb-6">
                    Datos Personales
                  </h2>
                  
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                      <label htmlFor="nombre" className="block text-sm font-medium text-gray-700 mb-1">
                        Nombres *
                      </label>
                      <input
                        type="text"
                        id="nombre"
                        name="nombre"
                        value={formData.nombre}
                        onChange={handleInputChange}
                        required
                        className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#002F57]"
                      />
                    </div>
                    <div>
                      <label htmlFor="apellidos" className="block text-sm font-medium text-gray-700 mb-1">
                        Apellidos *
                      </label>
                      <input
                        type="text"
                        id="apellidos"
                        name="apellidos"
                        value={formData.apellidos}
                        onChange={handleInputChange}
                        required
                        className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#002F57]"
                      />
                    </div>
                  </div>

                  <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                      <label htmlFor="dni" className="block text-sm font-medium text-gray-700 mb-1">
                        DNI *
                      </label>
                      <input
                        type="text"
                        id="dni"
                        name="dni"
                        value={formData.dni}
                        onChange={handleInputChange}
                        maxLength={8}
                        required
                        className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#002F57]"
                      />
                    </div>
                    <div>
                      <label htmlFor="telefono" className="block text-sm font-medium text-gray-700 mb-1">
                        Teléfono *
                      </label>
                      <input
                        type="tel"
                        id="telefono"
                        name="telefono"
                        value={formData.telefono}
                        onChange={handleInputChange}
                        required
                        className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#002F57]"
                      />
                    </div>
                  </div>

                  <div>
                    <label htmlFor="email" className="block text-sm font-medium text-gray-700 mb-1">
                      Correo Electrónico *
                    </label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      value={formData.email}
                      onChange={handleInputChange}
                      required
                      className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#002F57]"
                    />
                  </div>
                </div>
              )}

              {/* Step 3: Mass Details */}
              {currentStep === 3 && (
                <div className="space-y-6">
                  <h2 className="text-2xl font-bold text-[#002F57] mb-6">
                    Detalles de la Misa
                  </h2>
                  
                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-2">
                      Tipo de Misa *
                    </label>
                    <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                      {massTypes.map((type) => (
                        <button
                          key={type.value}
                          type="button"
                          onClick={() => setFormData((prev) => ({ ...prev, tipoMisa: type.value }))}
                          className={`p-4 rounded-lg border-2 text-left transition-colors ${
                            formData.tipoMisa === type.value
                              ? "border-[#002F57] bg-[#002F57]/5"
                              : "border-gray-200 hover:border-[#002F57]"
                          }`}
                        >
                          <span className="block font-medium text-[#002F57]">{type.label}</span>
                          <span className="block text-[#49AE9C] font-bold">S/. {type.price.toFixed(2)}</span>
                        </button>
                      ))}
                    </div>
                  </div>

                  <div>
                    <label htmlFor="intencion" className="block text-sm font-medium text-gray-700 mb-1">
                      Intención de la Misa *
                    </label>
                    <textarea
                      id="intencion"
                      name="intencion"
                      value={formData.intencion}
                      onChange={handleInputChange}
                      required
                      rows={3}
                      className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#002F57] resize-none"
                      placeholder="Por la salud de..., Por el eterno descanso de..., En acción de gracias por..."
                    />
                  </div>

                  <div>
                    <label htmlFor="difuntos" className="block text-sm font-medium text-gray-700 mb-1">
                      Nombres de los Difuntos (si aplica)
                    </label>
                    <textarea
                      id="difuntos"
                      name="difuntos"
                      value={formData.difuntos}
                      onChange={handleInputChange}
                      rows={2}
                      className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#002F57] resize-none"
                      placeholder="Nombres separados por coma"
                    />
                  </div>

                  <div>
                    <label htmlFor="observaciones" className="block text-sm font-medium text-gray-700 mb-1">
                      Observaciones Adicionales
                    </label>
                    <textarea
                      id="observaciones"
                      name="observaciones"
                      value={formData.observaciones}
                      onChange={handleInputChange}
                      rows={2}
                      className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#002F57] resize-none"
                    />
                  </div>
                </div>
              )}

              {/* Step 4: Payment */}
              {currentStep === 4 && (
                <div className="space-y-6">
                  <h2 className="text-2xl font-bold text-[#002F57] mb-6">
                    Información de Pago
                  </h2>
                  
                  {/* Summary */}
                  <div className="bg-gray-50 rounded-lg p-6 mb-6">
                    <h3 className="font-semibold text-[#002F57] mb-4">Resumen de tu reserva</h3>
                    <div className="space-y-2 text-sm">
                      <div className="flex justify-between">
                        <span className="text-gray-600">Fecha:</span>
                        <span className="font-medium">{formData.date}</span>
                      </div>
                      <div className="flex justify-between">
                        <span className="text-gray-600">Hora:</span>
                        <span className="font-medium">{formData.time}</span>
                      </div>
                      <div className="flex justify-between">
                        <span className="text-gray-600">Tipo de Misa:</span>
                        <span className="font-medium">
                          {massTypes.find((m) => m.value === formData.tipoMisa)?.label}
                        </span>
                      </div>
                      <hr className="my-3" />
                      <div className="flex justify-between text-lg">
                        <span className="font-semibold text-[#002F57]">Total:</span>
                        <span className="font-bold text-[#49AE9C]">S/. {getSelectedMassPrice().toFixed(2)}</span>
                      </div>
                    </div>
                  </div>

                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-2">
                      Método de Pago *
                    </label>
                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                      <button
                        type="button"
                        onClick={() => setFormData((prev) => ({ ...prev, metodoPago: "efectivo" }))}
                        className={`p-4 rounded-lg border-2 text-left transition-colors ${
                          formData.metodoPago === "efectivo"
                            ? "border-[#002F57] bg-[#002F57]/5"
                            : "border-gray-200 hover:border-[#002F57]"
                        }`}
                      >
                        <span className="block font-medium text-[#002F57]">Pago en Secretaría</span>
                        <span className="block text-sm text-gray-500">Pagar al momento del trámite</span>
                      </button>
                      <button
                        type="button"
                        onClick={() => setFormData((prev) => ({ ...prev, metodoPago: "transferencia" }))}
                        className={`p-4 rounded-lg border-2 text-left transition-colors ${
                          formData.metodoPago === "transferencia"
                            ? "border-[#002F57] bg-[#002F57]/5"
                            : "border-gray-200 hover:border-[#002F57]"
                        }`}
                      >
                        <span className="block font-medium text-[#002F57]">Transferencia Bancaria</span>
                        <span className="block text-sm text-gray-500">Depositar y adjuntar comprobante</span>
                      </button>
                    </div>
                  </div>

                  {formData.metodoPago === "transferencia" && (
                    <>
                      <div className="bg-blue-50 rounded-lg p-4">
                        <h4 className="font-semibold text-blue-800 mb-2">Datos para transferencia:</h4>
                        <div className="text-sm text-blue-700 space-y-1">
                          <p><strong>Banco:</strong> {PAYMENT_INFO.banco}</p>
                          <p><strong>Cuenta:</strong> {PAYMENT_INFO.cuenta}</p>
                          <p><strong>CCI:</strong> {PAYMENT_INFO.cci}</p>
                          <p><strong>Titular:</strong> {PAYMENT_INFO.titular}</p>
                        </div>
                      </div>

                      <div>
                        <label htmlFor="comprobante" className="block text-sm font-medium text-gray-700 mb-1">
                          Adjuntar Comprobante de Pago
                        </label>
                        <input
                          type="file"
                          id="comprobante"
                          name="comprobante"
                          onChange={handleFileChange}
                          accept="image/*,.pdf"
                          className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#002F57]"
                        />
                        <p className="text-xs text-gray-500 mt-1">
                          Formatos aceptados: JPG, PNG, PDF (máx. 5MB)
                        </p>
                      </div>
                    </>
                  )}

                  {submitStatus === "error" && (
                    <div className="p-4 bg-red-50 border border-red-200 rounded-lg flex items-center">
                      <AlertCircle className="w-5 h-5 text-red-500 mr-3" />
                      <p className="text-red-700">Hubo un error al procesar tu reserva. Por favor, intenta nuevamente.</p>
                    </div>
                  )}
                </div>
              )}

              {/* Step 5: Confirmation */}
              {currentStep === 5 && (
                <div className="text-center py-8">
                  <div className="w-20 h-20 bg-[#49AE9C] rounded-full flex items-center justify-center mx-auto mb-6">
                    <CheckCircle className="w-10 h-10 text-white" />
                  </div>
                  <h2 className="text-2xl font-bold text-[#002F57] mb-4">
                    ¡Reserva Realizada con Éxito!
                  </h2>
                  <p className="text-gray-600 mb-6">
                    Tu solicitud de misa ha sido recibida. Te enviaremos un correo de confirmación a <strong>{formData.email}</strong> con los detalles de tu reserva.
                  </p>
                  
                  <div className="bg-gray-50 rounded-lg p-6 text-left max-w-md mx-auto">
                    <h3 className="font-semibold text-[#002F57] mb-4">Resumen de tu reserva:</h3>
                    <div className="space-y-2 text-sm">
                      <div className="flex justify-between">
                        <span className="text-gray-600">Fecha:</span>
                        <span className="font-medium">{formData.date}</span>
                      </div>
                      <div className="flex justify-between">
                        <span className="text-gray-600">Hora:</span>
                        <span className="font-medium">{formData.time}</span>
                      </div>
                      <div className="flex justify-between">
                        <span className="text-gray-600">Tipo de Misa:</span>
                        <span className="font-medium">
                          {massTypes.find((m) => m.value === formData.tipoMisa)?.label}
                        </span>
                      </div>
                      <div className="flex justify-between">
                        <span className="text-gray-600">Total:</span>
                        <span className="font-bold text-[#49AE9C]">S/. {getSelectedMassPrice().toFixed(2)}</span>
                      </div>
                    </div>
                  </div>

                  <div className="mt-8">
                    <a 
                      href="/"
                      className="inline-block px-8 py-3 bg-[#002F57] text-white font-semibold rounded-lg hover:bg-[#001f3d] transition-colors"
                    >
                      Volver al Inicio
                    </a>
                  </div>
                </div>
              )}

              {/* Navigation Buttons */}
              {currentStep < 5 && (
                <div className="flex justify-between mt-8 pt-6 border-t">
                  <button
                    type="button"
                    onClick={prevStep}
                    disabled={currentStep === 1}
                    className={`flex items-center px-6 py-3 rounded-lg font-medium transition-colors ${
                      currentStep === 1
                        ? "text-gray-400 cursor-not-allowed"
                        : "text-[#002F57] hover:bg-gray-100"
                    }`}
                  >
                    <ChevronLeft className="w-5 h-5 mr-1" />
                    Anterior
                  </button>

                  {currentStep < 4 ? (
                    <button
                      type="button"
                      onClick={nextStep}
                      disabled={!validateStep(currentStep)}
                      className={`flex items-center px-6 py-3 rounded-lg font-medium transition-colors ${
                        validateStep(currentStep)
                          ? "bg-[#002F57] text-white hover:bg-[#001f3d]"
                          : "bg-gray-200 text-gray-400 cursor-not-allowed"
                      }`}
                    >
                      Siguiente
                      <ChevronRight className="w-5 h-5 ml-1" />
                    </button>
                  ) : (
                    <button
                      type="submit"
                      disabled={isSubmitting || !validateStep(4)}
                      className="flex items-center px-8 py-3 bg-[#49AE9C] text-white font-semibold rounded-lg hover:bg-[#3d9a89] transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                      {isSubmitting ? (
                        <>
                          <Loader2 className="w-5 h-5 mr-2 animate-spin" />
                          Procesando...
                        </>
                      ) : (
                        <>
                          <CheckCircle className="w-5 h-5 mr-2" />
                          Confirmar Reserva
                        </>
                      )}
                    </button>
                  )}
                </div>
              )}
            </form>
          </div>

          {/* Additional Info */}
          <div className="mt-8 bg-white rounded-lg shadow-lg p-6">
            <h3 className="font-semibold text-[#002F57] mb-4">Información Importante:</h3>
            <ul className="space-y-2 text-sm text-gray-600">
              <li className="flex items-start">
                <CheckCircle className="w-4 h-4 mr-2 text-[#49AE9C] flex-shrink-0 mt-0.5" />
                La reserva está sujeta a disponibilidad. Te confirmaremos por correo electrónico.
              </li>
              <li className="flex items-start">
                <CheckCircle className="w-4 h-4 mr-2 text-[#49AE9C] flex-shrink-0 mt-0.5" />
                Si eliges pago en secretaría, deberás acercarte al menos 3 días antes de la fecha de la misa.
              </li>
              <li className="flex items-start">
                <CheckCircle className="w-4 h-4 mr-2 text-[#49AE9C] flex-shrink-0 mt-0.5" />
                Para novenarios y cabos de año, coordinar las fechas exactas en secretaría.
              </li>
              <li className="flex items-start">
                <CheckCircle className="w-4 h-4 mr-2 text-[#49AE9C] flex-shrink-0 mt-0.5" />
                Si tienes dudas, llámanos al (054) 253-280.
              </li>
            </ul>
          </div>
        </div>
      </section>
    </>
  );
}
